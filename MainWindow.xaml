<Window x:Class="paper_rock_scissors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paper_rock_scissors"
        xmlns:ui="clr-namespace:paper_rock_scissors.Class.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="450">
    <Grid Background="#FFFFE9E9">
        <ui:WebCamImage x:Name="image" Width="360" Height="236" Margin="45,166,45,382" />

        <Label x:Name="resultStr" HorizontalContentAlignment="Center" Content="rien" HorizontalAlignment="Center" Margin="0,631,0,0" VerticalAlignment="Top" Width="360" FontSize="36" RenderTransformOrigin="0.389,1.098" FontFamily="Arial" FontWeight="Bold"/>
        <Button x:Name="startBtn" Content="start" HorizontalAlignment="Center" Margin="0,696,0,0" VerticalAlignment="Top" Click="startBtn_Click" Height="46" Width="161" Background="Black" Foreground="White" FontSize="24" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>
        <ui:SignViewer x:Name="SignView" HorizontalAlignment="Center" Margin="0,421,0,0" VerticalAlignment="Top" Height="200" Width="360" />
        <ui:TimerNumber x:Name="TimerCounter" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LblScore" Content="Score : 0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
