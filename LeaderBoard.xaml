<Window x:Class="paper_rock_scissors.LeaderBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paper_rock_scissors"
        mc:Ignorable="d"
        Title="LeaderBoard" Height="450" Width="450">
    <Grid Background="#FFFFE9E9">
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="286*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="LeaderBoardGrid" Margin="30,87,30,0" Background="White" BorderBrush="White" HeadersVisibility="None" Grid.RowSpan="2" GridLinesVisibility="Horizontal" FontSize="17">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Index}" Value="1">
                            <Setter Property="Background" Value="Gold"></Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Index}" Value="2">
                            <Setter Property="Background" Value="LightGray"></Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Index}" Value="3">
                            <Setter Property="Background" Value="SandyBrown"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <Button x:Name="RefreshBtn" Content="Refresh" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Click="RefreshBtn_Click" Height="30" Width="130" Grid.Row="2" Margin="0,16,0,0" Background="#FF4BB16D" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="Leaderboard" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="27" Margin="0,21,0,0"/>

    </Grid>
</Window>
